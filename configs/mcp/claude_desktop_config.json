{
  "mcpServers": {
    "DramaCraft": {
      "command": "uv",
      "args": ["run", "dramacraft", "start"],
      "env": {
        "LLM__PROVIDER": "baidu",
        "LLM__API_KEY": "your_baidu_api_key",
        "LLM__SECRET_KEY": "your_baidu_secret_key",
        "LLM__MODEL_NAME": "ERNIE-Bot-turbo",
        "VIDEO__OUTPUT_DIR": "./output",
        "VIDEO__TEMP_DIR": "./temp",
        "JIANYING__INSTALLATION_PATH": "/Applications/JianYing.app",
        "LOGGING__LEVEL": "INFO",
        "DEBUG": "false"
      }
    }
  }
}
